<Window x:Class="CentroMedicoORM.MantenimientoUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CentroMedicoORM"
        mc:Ignorable="d"
        Title="MantenimientoUsuarios" Height="400" Width="500">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar x:Name="toolBar" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="185" Margin="0,0,-85,0">
                <Button Name="addButton" Content="Añadir" Height="25" Width="45" Click="addButton_Click"/>
                <Button Name="deleteButton" Content="Eliminar" Height="26" Width="52" Margin="0,2" Click="deleteButton_Click"/>
                <Button Name="updateButton" Content="Modificar" Height="26" Width="61" Click="updateButton_Click"/>

            </ToolBar>
        </ToolBarTray>
        <Grid>
            <DataGrid x:Name="dataGrid" Margin="0,193,0,0" />
            <Button x:Name="buttonGetAll" Content="Listar Usuarios" HorizontalAlignment="Left" Height="30" Margin="368,158,0,0" VerticalAlignment="Top" Width="114" Click="buttonGetAll_Click"/>
            <Label x:Name="label" Content="NSS Usuario" HorizontalAlignment="Left" Margin="8,42,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="NSStextBox" HorizontalAlignment="Left" Height="23" Margin="88,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding ElementName=dataGrid, Path=SelectedItem.NssUsuario, UpdateSourceTrigger=PropertyChanged}"/>
            <Label x:Name="label_Copy" Content="Nombre" HorizontalAlignment="Left" Margin="8,70,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="NombretextBox" HorizontalAlignment="Left" Height="23" Margin="88,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding ElementName=dataGrid, Path=SelectedItem.nombre, UpdateSourceTrigger=PropertyChanged}"/>
            <Label x:Name="label_Copy1" Content="Apellidos" HorizontalAlignment="Left" Margin="8,98,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="apellidostextbox" HorizontalAlignment="Left" Height="23" Margin="88,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding ElementName=dataGrid, Path=SelectedItem.apellidos, UpdateSourceTrigger=PropertyChanged}"/>
            <Label x:Name="label_Copy2" Content="Contraseña" HorizontalAlignment="Left" Margin="8,126,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="contraseñatextbox" HorizontalAlignment="Left" Height="23" Margin="88,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding ElementName=dataGrid, Path=SelectedItem.contraseña, UpdateSourceTrigger=PropertyChanged}"/>
            <Label x:Name="label_Copy3" Content="Direccion" HorizontalAlignment="Left" Margin="8,154,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="direcciontextbox" HorizontalAlignment="Left" Height="23" Margin="88,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding ElementName=dataGrid, Path=SelectedItem.direccion, UpdateSourceTrigger=PropertyChanged}"/>
            <Label x:Name="label_Copy4" Content="Localidad" HorizontalAlignment="Left" Margin="223,42,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="localidadtextbox" HorizontalAlignment="Left" Height="23" Margin="303,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding ElementName=dataGrid, Path=SelectedItem.localidad, UpdateSourceTrigger=PropertyChanged}"/>
            <Label x:Name="label_Copy5" Content="Telefono" HorizontalAlignment="Left" Margin="223,70,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="telefonotextbox" HorizontalAlignment="Left" Height="23" Margin="303,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding ElementName=dataGrid, Path=SelectedItem.telefono, UpdateSourceTrigger=PropertyChanged}"/>
            <Label x:Name="label_Copy6" Content="DNI" HorizontalAlignment="Left" Margin="223,98,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="dnitextbox" HorizontalAlignment="Left" Height="23" Margin="303,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding ElementName=dataGrid, Path=SelectedItem.dni, UpdateSourceTrigger=PropertyChanged}"/>
            <Label x:Name="label_Copy7" Content="Email" HorizontalAlignment="Left" Margin="223,126,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="emailtextbox" HorizontalAlignment="Left" Height="23" Margin="303,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding ElementName=dataGrid, Path=SelectedItem.email, UpdateSourceTrigger=PropertyChanged}"/>


        </Grid>
    </DockPanel>
</Window>
